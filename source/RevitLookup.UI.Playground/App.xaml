<Application
    x:Class="RevitLookup.UI.Playground.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:menu="clr-namespace:RevitLookup.UI.Framework.Markup.Menu;assembly=RevitLookup.UI.Framework"
    xmlns:membersGrid="clr-namespace:RevitLookup.UI.Playground.Mocks.Styles.ComponentStyles.MembersGrid"
    Startup="OnStartup">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Selectors -->
            <membersGrid:DataGridCellTemplateSelector x:Key="DataGridCellTemplateSelector" />

            <ResourceDictionary.MergedDictionaries>

                <!-- Themes -->
                <ui:ThemesDictionary />
                <ui:ControlsDictionary />
                <menu:MenusDictionary />

                <!-- Controls -->
                <ResourceDictionary Source="pack://application:,,,/RevitLookup.UI.Framework;component/Controls/ContentPlaceholder/ContentPlaceholder.xaml" />

                <!-- Components Styles -->
                <ResourceDictionary Source="Mocks/Styles/ComponentStyles/ObjectsTree/TreeGroupTemplates.xaml" />
                <ResourceDictionary Source="Mocks/Styles/ComponentStyles/MembersGrid/DataGridGroupStyles.xaml" />
                <ResourceDictionary Source="Mocks/Styles/ComponentStyles/MembersGrid/DataGridRowStyle.xaml" />
                <ResourceDictionary Source="Mocks/Styles/ComponentStyles/MembersGrid/DataGridCellTemplate.xaml" />

                <!-- Client controls -->
                <ResourceDictionary Source="Controls/ControlExample.xaml" />
                <ResourceDictionary Source="Controls/ColorPageExample.xaml" />
                <ResourceDictionary Source="Controls/ColorTile.xaml" />

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>

</Application>