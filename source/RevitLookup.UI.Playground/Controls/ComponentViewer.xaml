<ui:FluentWindow
    x:Class="RevitLookup.UI.Playground.Client.Controls.ComponentViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://lookupengine.com/xaml"
    mc:Ignorable="d"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <DockPanel>
        <ui:TitleBar
            DockPanel.Dock="Top"
            Title="Component preview"
            Icon="{ui:ImageIcon 'pack://application:,,,/RevitLookup.UI.Framework;component/Resources/Icons/ProductIcon.png'}" />
        <ContentControl
            x:Name="Viewer" />
    </DockPanel>

</ui:FluentWindow>