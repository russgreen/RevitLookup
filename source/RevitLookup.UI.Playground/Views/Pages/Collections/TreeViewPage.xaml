<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.Collections.TreeViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitLookup.UI.Playground.Views.Pages.Collections"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RevitLookup.UI.Playground.Models"
    xmlns:ui="http://lookupengine.com/xaml"
    d:DataContext="{d:DesignInstance local:TreeViewPage}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,24">
        <controls:ControlExample
            Margin="0"
            HeaderText="Standard TreeView"
            XamlCode="&lt;TreeView&#x0a;&#x09;MaxHeight=&quot;400&quot;&#x0a;&#x09;ItemsSource=&quot;{Binding ViewModel.Persons, Mode=OneWay}&quot;&gt;&#x0a;&#x09;&lt;TreeView.ItemTemplate&gt;&#x0a;&#x09;&#x09;&lt;HierarchicalDataTemplate DataType=&quot;{x:Type models:Person}&quot; ItemsSource=&quot;{Binding Children}&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&lt;TextBlock&#x0a;&#x09;&#x09;&#x09;&#x09;VerticalAlignment=&quot;Center&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;Text=&quot;{Binding Name, Mode=OneWay}&quot; /&gt;&#x0a;&#x09;&#x09;&lt;/HierarchicalDataTemplate&gt;&#x0a;&#x09;&lt;/TreeView.ItemTemplate&gt;&#x0a;&lt;/TreeView&gt;">
            <TreeView
                MaxHeight="400"
                ItemsSource="{Binding ViewModel.Persons, Mode=OneWay}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:Person}" ItemsSource="{Binding Children}">
                        <TextBlock
                            VerticalAlignment="Center"
                            Text="{Binding Name, Mode=OneWay}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="TreeView with a custom template"
            XamlCode="&lt;TreeView&#x0a;&#x09;MaxHeight=&quot;400&quot;&#x0a;&#x09;ItemsSource=&quot;{Binding ViewModel.Persons, Mode=OneWay}&quot;&gt;&#x0a;&#x09;&lt;TreeView.ItemTemplate&gt;&#x0a;&#x09;&#x09;&lt;HierarchicalDataTemplate DataType=&quot;{x:Type models:Person}&quot; ItemsSource=&quot;{Binding Children}&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&lt;Grid Margin=&quot;4,4&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;Grid.RowDefinitions&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;RowDefinition Height=&quot;Auto&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;RowDefinition Height=&quot;Auto&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;/Grid.RowDefinitions&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;Grid.ColumnDefinitions&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;ColumnDefinition Width=&quot;Auto&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;ColumnDefinition Width=&quot;*&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;/Grid.ColumnDefinitions&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;Ellipse&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Grid.RowSpan=&quot;2&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Width=&quot;28&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Height=&quot;28&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Margin=&quot;0,0,8,0&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;VerticalAlignment=&quot;Center&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Fill=&quot;{ui:ThemeResource ControlStrongStrokeColorDefaultBrush}&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;TextBlock&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Grid.Row=&quot;0&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Grid.Column=&quot;1&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;FontWeight=&quot;SemiBold&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Text=&quot;{Binding Name, Mode=OneWay}&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;TextBlock&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Grid.Row=&quot;1&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Grid.Column=&quot;1&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;FontSize=&quot;11&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Foreground=&quot;{ui:ThemeResource TextFillColorSecondaryBrush}&quot;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;Text=&quot;{Binding Company, Mode=OneWay}&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&lt;/Grid&gt;&#x0a;&#x09;&#x09;&lt;/HierarchicalDataTemplate&gt;&#x0a;&#x09;&lt;/TreeView.ItemTemplate&gt;&#x0a;&lt;/TreeView&gt;">
            <TreeView
                MaxHeight="400"
                ItemsSource="{Binding ViewModel.Persons, Mode=OneWay}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:Person}" ItemsSource="{Binding Children}">
                        <Grid Margin="4,4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Ellipse
                                Grid.RowSpan="2"
                                Width="28"
                                Height="28"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Fill="{ui:ThemeResource ControlStrongStrokeColorDefaultBrush}" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                FontWeight="SemiBold"
                                Text="{Binding Name, Mode=OneWay}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="11"
                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                Text="{Binding Company, Mode=OneWay}" />
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </controls:ControlExample>

    </StackPanel>
</Page>