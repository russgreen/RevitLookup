<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.Collections.DataGridPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitLookup.UI.Playground.Views.Pages.Collections"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://lookupengine.com/xaml"
    d:DataContext="{d:DesignInstance local:DataGridPage}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,24">
        <controls:ControlExample
            Margin="0"
            HeaderText="Standard DataGrid"
            XamlCode="&lt;DataGrid&#x0a;&#x09;MaxHeight=&quot;300&quot;&#x0a;&#x09;HeadersVisibility=&quot;Column&quot;&#x0a;&#x09;AutoGenerateColumns=&quot;False&quot;&#x0a;&#x09;ItemsSource=&quot;{Binding ViewModel.Persons, Mode=OneWay}&quot;&gt;&#x0a;&#x09;&lt;DataGrid.Columns&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding FirstName}&quot; Header=&quot;First Name&quot; Width=&quot;*&quot; /&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding LastName}&quot; Header=&quot;Last Name&quot; Width=&quot;*&quot; /&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding Company}&quot; Header=&quot;Company&quot; Width=&quot;*&quot; /&gt;&#x0a;&#x09;&lt;/DataGrid.Columns&gt;&#x0a;&lt;/DataGrid&gt;">
            <DataGrid
                MaxHeight="300"
                HeadersVisibility="Column"
                IsReadOnly="False"
                AutoGenerateColumns="False"
                ItemsSource="{Binding ViewModel.Persons, Mode=OneWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding FirstName}"
                        Header="First Name"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding LastName}"
                        Header="Last Name"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Company}"
                        Header="Company"
                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="DataGrid with Grouping"
            XamlCode="&lt;DataGrid&#x0a;&#x09;MaxHeight=&quot;300&quot;&#x0a;&#x09;HeadersVisibility=&quot;Column&quot;&#x0a;&#x09;IsReadOnly=&quot;True&quot;&#x0a;&#x09;AutoGenerateColumns=&quot;False&quot;&#x0a;&#x09;ItemsSource=&quot;{Binding ViewModel.Persons}&quot;&gt;&#x0a;&#x09;&lt;DataGrid.GroupStyle&gt;&#x0a;&#x09;&#x09;&lt;StaticResource ResourceKey=&quot;DefaultSummaryGridGroupStyle&quot; /&gt;&#x0a;&#x09;&lt;/DataGrid.GroupStyle&gt;&#x0a;&#x09;&lt;DataGrid.Columns&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding FirstName}&quot; Width=&quot;*&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&lt;DataGridTextColumn.Header&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;ui:SymbolIcon Symbol=&quot;Person24&quot; FontSize=&quot;14&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;TextBlock Margin=&quot;12 0 0 0&quot; Text=&quot;First Name&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;/StackPanel&gt;&#x0a;&#x09;&#x09;&#x09;&lt;/DataGridTextColumn.Header&gt;&#x0a;&#x09;&#x09;&lt;/DataGridTextColumn&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding LastName}&quot; Width=&quot;*&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&lt;DataGridTextColumn.Header&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;ui:SymbolIcon Symbol=&quot;PersonTag24&quot; FontSize=&quot;14&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&#x09;&lt;TextBlock Margin=&quot;12 0 0 0&quot; Text=&quot;Last Name&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;/StackPanel&gt;&#x0a;&#x09;&#x09;&#x09;&lt;/DataGridTextColumn.Header&gt;&#x0a;&#x09;&#x09;&lt;/DataGridTextColumn&gt;&#x0a;&#x09;&lt;/DataGrid.Columns&gt;&#x0a;&lt;/DataGrid&gt;">
            <DataGrid
                x:Name="GroupingDataGrid"
                MaxHeight="300"
                HeadersVisibility="Column"
                IsReadOnly="True"
                AutoGenerateColumns="False"
                ItemsSource="{Binding ViewModel.Persons}">
                <DataGrid.GroupStyle>
                    <StaticResource ResourceKey="DefaultSummaryGridGroupStyle" />
                </DataGrid.GroupStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding FirstName}"
                        Width="*">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon
                                    Symbol="Person24"
                                    FontSize="14" />
                                <TextBlock
                                    Margin="12 0 0 0"
                                    Text="First Name" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Binding="{Binding LastName}"
                        Width="*">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon
                                    Symbol="PersonTag24"
                                    FontSize="14" />
                                <TextBlock
                                    Margin="12 0 0 0"
                                    Text="Last Name" />
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="Editable DataGrid"
            XamlCode="&lt;DataGrid&#x0a;&#x09;MaxHeight=&quot;300&quot;&#x0a;&#x09;HeadersVisibility=&quot;Column&quot;&#x0a;&#x09;IsReadOnly=&quot;False&quot;&#x0a;&#x09;AutoGenerateColumns=&quot;False&quot;&#x0a;&#x09;ItemsSource=&quot;{Binding ViewModel.Persons, Mode=TwoWay}&quot;&gt;&#x0a;&#x09;&lt;DataGrid.Columns&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding FirstName, UpdateSourceTrigger=PropertyChanged}&quot; Header=&quot;First Name&quot; Width=&quot;*&quot; /&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding LastName, UpdateSourceTrigger=PropertyChanged}&quot; Header=&quot;Last Name&quot; Width=&quot;*&quot; /&gt;&#x0a;&#x09;&#x09;&lt;DataGridTextColumn Binding=&quot;{Binding Company, UpdateSourceTrigger=PropertyChanged}&quot; Header=&quot;Company&quot; Width=&quot;*&quot; /&gt;&#x0a;&#x09;&lt;/DataGrid.Columns&gt;&#x0a;&lt;/DataGrid&gt;">
            <DataGrid
                MaxHeight="300"
                HeadersVisibility="Column"
                IsReadOnly="False"
                AutoGenerateColumns="False"
                ItemsSource="{Binding ViewModel.Persons, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                        Header="First Name"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                        Header="Last Name"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Company, UpdateSourceTrigger=PropertyChanged}"
                        Header="Company"
                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </controls:ControlExample>

    </StackPanel>
</Page>