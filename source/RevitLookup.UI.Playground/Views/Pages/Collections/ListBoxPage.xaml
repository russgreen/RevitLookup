<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.Collections.ListBoxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitLookup.UI.Playground.Views.Pages.Collections"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RevitLookup.UI.Playground.Models"
    xmlns:ui="http://lookupengine.com/xaml"
    d:DataContext="{d:DesignInstance local:ListBoxPage}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,24">
        <controls:ControlExample
            Margin="0"
            HeaderText="Basic ListBox with Simple DataTemplate"
            XamlCode="&lt;ListBox ItemsSource=&quot;{Binding ViewModel.Persons}&quot;&gt;&#x0a;&#x09;&lt;ListBox.ItemTemplate&gt;&#x0a;&#x09;&#x09;&lt;DataTemplate DataType=&quot;{x:Type models:Person}&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&lt;TextBlock Margin=&quot;8,4&quot; Text=&quot;{Binding Name}&quot; /&gt;&#x0a;&#x09;&#x09;&lt;/DataTemplate&gt;&#x0a;&#x09;&lt;/ListBox.ItemTemplate&gt;&#x0a;&lt;/ListBox&gt;">
            <ListBox
                MaxHeight="200"
                ItemsSource="{Binding ViewModel.Persons, Mode=TwoWay}"
                SelectedIndex="2"
                SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Person}">
                        <TextBlock Margin="8,4" Text="{Binding Name, Mode=OneWay}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="ListBox with Selection Support"
            XamlCode="&lt;ListBox ItemsSource=&quot;{Binding ViewModel.Persons}&quot; SelectionMode=&quot;{Binding ViewModel.ListBoxSelectionMode}&quot;&gt;&#x0a;&#x09;&lt;ListBox.ItemTemplate&gt;&#x0a;&#x09;&#x09;&lt;DataTemplate DataType=&quot;{x:Type models:Person}&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&lt;Grid Margin=&quot;8,0&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&#x09;&lt;TextBlock Text=&quot;{Binding Name}&quot; /&gt;&#x0a;&#x09;&#x09;&#x09;&lt;/Grid&gt;&#x0a;&#x09;&#x09;&lt;/DataTemplate&gt;&#x0a;&#x09;&lt;/ListBox.ItemTemplate&gt;&#x0a;&lt;/ListBox&gt;">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ListBox
                    Grid.Column="0"
                    MaxHeight="200"
                    ItemsSource="{Binding ViewModel.Persons, Mode=TwoWay}"
                    SelectedIndex="1"
                    SelectionMode="{Binding ViewModel.SelectionMode, Mode=OneWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Person}">
                            <Grid Margin="8,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Ellipse
                                    x:Name="Ellipse"
                                    Grid.RowSpan="2"
                                    Width="32"
                                    Height="32"
                                    Margin="6"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Fill="{ui:ThemeResource ControlStrongStrokeColorDefaultBrush}" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="12,6,0,0"
                                    FontWeight="Bold"
                                    Text="{Binding Name, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="12,0,0,6"
                                    Text="{Binding Company, Mode=OneWay}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel
                    Grid.Column="1"
                    MinWidth="120"
                    Margin="12,0,0,0"
                    VerticalAlignment="Top">
                    <Label Content="Selection mode" Target="{Binding ElementName=SelectionModeComboBox}" />
                    <ComboBox x:Name="SelectionModeComboBox" SelectedIndex="{Binding ViewModel.SelectionModeIndex, Mode=TwoWay}">
                        <ComboBoxItem Content="Single" />
                        <ComboBoxItem Content="Multiple" />
                        <ComboBoxItem Content="Extended" />
                    </ComboBox>
                </StackPanel>
            </Grid>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="ListBox with Custom ItemContainerStyle"
            XamlCode="&lt;ListBox ItemsSource=&quot;{Binding ViewModel.Persons}&quot;&gt;&#x0a;&#x09;&lt;ListBox.ItemContainerStyle&gt;&#x0a;&#x09;&#x09;&lt;Style TargetType=&quot;ListBoxItem&quot;&gt;&#x0a;&#x09;&#x09;&#x09;&lt;Setter Property=&quot;Margin&quot; Value=&quot;0,2&quot; /&gt;&#x0a;&#x09;&#x09;&lt;/Style&gt;&#x0a;&#x09;&lt;/ListBox.ItemContainerStyle&gt;&#x0a;&lt;/ListBox&gt;">
            <ListBox
                MaxHeight="200"
                d:ItemsSource="{d:SampleData ItemCount=2}"
                BorderThickness="1"
                ItemsSource="{Binding ViewModel.Persons, Mode=TwoWay}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0,2" />
                        <Setter Property="Padding" Value="8,4" />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Person}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontWeight="SemiBold"
                                Text="{Binding Name, Mode=OneWay}" />
                            <TextBlock
                                Margin="8,0,0,0"
                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                Text="-" />
                            <TextBlock
                                Margin="8,0,0,0"
                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                Text="{Binding Company, Mode=OneWay}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </controls:ControlExample>
    </StackPanel>
</Page>