<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.Layout.SeparatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:basicInput="clr-namespace:RevitLookup.UI.Playground.Views.Pages.BasicInput"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    d:DataContext="{d:DesignInstance basicInput:ButtonPage}"
    d:DesignHeight="750"
    d:DesignWidth="500"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,0,0,24">

        <controls:ControlExample
            Margin="0"
            HeaderText="A horizontal Separator"
            XamlCode="&lt;Separator /&gt;">
            <Separator />
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="A vertical Separator"
            XamlCode="&lt;Separator Height=&quot;100&quot; Width=&quot;1&quot; /&gt;">
            <Separator
                Height="100"
                Width="1" />
        </controls:ControlExample>

    </StackPanel>
</Page>