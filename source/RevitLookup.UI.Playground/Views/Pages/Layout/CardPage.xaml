<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.Layout.CardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:basicInput="clr-namespace:RevitLookup.UI.Playground.Views.Pages.BasicInput"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    d:DataContext="{d:DesignInstance basicInput:ButtonPage}"
    d:DesignHeight="750"
    d:DesignWidth="500"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,0,0,24">
        <controls:ControlExample
            Margin="0"
            HeaderText="An empty Card"
            XamlCode="&lt;ui:Card /&gt;">
            <ui:Card />
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="A Card with content"
            XamlCode="&lt;ui:Card&gt;&#10;    &lt;StackPanel&gt;&#10;        &lt;ui:TextBlock FontTypography=&quot;BodyStrong&quot; Text=&quot;Header&quot; /&gt;&#10;        &lt;ui:TextBlock Text=&quot;Body&quot; /&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/ui:Card&gt;">
            <ui:Card>
                <StackPanel>
                    <ui:TextBlock
                        FontTypography="BodyStrong"
                        Text="Header" />
                    <ui:TextBlock
                        Text="Body" />
                </StackPanel>
            </ui:Card>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="A Card with footer"
            XamlCode="&lt;ui:Card Content=&quot;Card content&quot;&gt;&#10;    &lt;ui:Card.Footer&gt;&#10;        &lt;TextBlock Text=&quot;Card footer&quot; /&gt;&#10;    &lt;/ui:Card.Footer&gt;&#10;&lt;/ui:Card&gt;">
            <ui:Card
                Content="Card content">
                <ui:Card.Footer>
                    <TextBlock
                        Text="Card footer" />
                </ui:Card.Footer>
            </ui:Card>
        </controls:ControlExample>

    </StackPanel>
</Page>