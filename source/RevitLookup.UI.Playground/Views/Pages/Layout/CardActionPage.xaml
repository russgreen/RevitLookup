<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.Layout.CardActionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:basicInput="clr-namespace:RevitLookup.UI.Playground.Views.Pages.BasicInput"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    d:DataContext="{d:DesignInstance basicInput:ButtonPage}"
    d:DesignHeight="950"
    d:DesignWidth="500"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,0,0,24">

        <controls:ControlExample
            Margin="0"
            HeaderText="A CardAction with content"
            XamlCode="&lt;ui:CardAction&gt;&#10;    &lt;StackPanel&gt;&#10;        &lt;ui:TextBlock FontTypography=&quot;BodyStrong&quot; Text=&quot;Header&quot; /&gt;&#10;        &lt;ui:TextBlock Text=&quot;Body&quot; /&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/ui:CardAction&gt;">
            <ui:CardAction>
                <StackPanel>
                    <ui:TextBlock
                        FontTypography="BodyStrong"
                        Text="Header" />
                    <ui:TextBlock
                        Text="Body" />
                </StackPanel>
            </ui:CardAction>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="A CardAction with Icon"
            XamlCode="&lt;ui:CardAction Content=&quot;Card content&quot; Icon=&quot;{ui:SymbolIcon Settings32}&quot; /&gt;">
            <ui:CardAction
                Content="Card content"
                Icon="{ui:SymbolIcon Settings32}" />
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="A CardAction without chevron"
            XamlCode="&lt;ui:CardAction Content=&quot;Card content&quot; IsChevronVisible=&quot;False&quot; /&gt;">
            <ui:CardAction
                Content="Card content"
                IsChevronVisible="False" />
        </controls:ControlExample>

    </StackPanel>
</Page>