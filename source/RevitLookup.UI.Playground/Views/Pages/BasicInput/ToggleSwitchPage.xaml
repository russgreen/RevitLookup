<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.BasicInput.ToggleSwitchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:basicInput="clr-namespace:RevitLookup.UI.Playground.Views.Pages.BasicInput"
    xmlns:converters="clr-namespace:RevitLookup.UI.Framework.Converters;assembly=RevitLookup.UI.Framework"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    d:DataContext="{d:DesignInstance basicInput:ToggleSwitchPage}"
    d:DesignHeight="1200"
    d:DesignWidth="500"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,0,0,24">

        <controls:ControlExample
            Margin="0,32,0,0"
            HeaderText="WPF UI ToggleSwitch"
            XamlCode="&lt;ui:ToggleSwitch OnContent=&quot;On&quot; OffContent=&quot;Off&quot; /&gt;">
            <DockPanel>
                <CheckBox
                    DockPanel.Dock="Right"
                    IsChecked="{Binding ViewModel.IsStandardToggleSwitchEnabled, Converter={converters:InverseBooleanConverter}}"
                    Content="Disable control" />
                <ui:ToggleSwitch
                    OnContent="On"
                    OffContent="Off"
                    IsEnabled="{Binding ViewModel.IsStandardToggleSwitchEnabled}" />
            </DockPanel>
        </controls:ControlExample>

    </StackPanel>
</Page>