<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.BasicInput.RadioButtonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:basicInput="clr-namespace:RevitLookup.UI.Playground.Views.Pages.BasicInput"
    xmlns:converters="clr-namespace:RevitLookup.UI.Framework.Converters;assembly=RevitLookup.UI.Framework"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    d:DataContext="{d:DesignInstance basicInput:RadioButtonPage}"
    d:DesignHeight="1200"
    d:DesignWidth="500"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,0,0,24">

        <controls:ControlExample
            Margin="0,0,0,0"
            HeaderText="Standard RadioButton"
            XamlCode="&lt;RadioButton Content=&quot;Option&quot; /&gt;">
            <DockPanel>
                <CheckBox
                    DockPanel.Dock="Right"
                    IsChecked="{Binding ViewModel.IsStandardRadioButtonEnabled, Converter={converters:InverseBooleanConverter}}"
                    Content="Disable radio buttons" />
                <StackPanel>
                    <RadioButton
                        Content="Option 1"
                        GroupName="StandardGroup"
                        IsEnabled="{Binding ViewModel.IsStandardRadioButtonEnabled}"
                        IsChecked="True" />
                    <RadioButton
                        Margin="0 4 0 0"
                        Content="Option 2"
                        GroupName="StandardGroup"
                        IsEnabled="{Binding ViewModel.IsStandardRadioButtonEnabled}" />
                    <RadioButton
                        Margin="0 4 0 0"
                        Content="Option 3"
                        GroupName="StandardGroup"
                        IsEnabled="{Binding ViewModel.IsStandardRadioButtonEnabled}" />
                </StackPanel>
            </DockPanel>
        </controls:ControlExample>

    </StackPanel>
</Page>