<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.BasicInput.SplitButtonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:basicInput="clr-namespace:RevitLookup.UI.Playground.Views.Pages.BasicInput"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    d:DataContext="{d:DesignInstance basicInput:SplitButtonPage}"
    d:DesignHeight="800"
    d:DesignWidth="500"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,24">

        <controls:ControlExample
            Margin="0,0,0,0"
            HeaderText="A SplitButton"
            XamlCode="&lt;ui:SplitButton Icon=&quot;{ui:SymbolIcon PaintBrush24}&quot;&gt;&#x0a;    &lt;Border Width=&quot;35&quot; Height=&quot;20&quot; Background=&quot;Green&quot; CornerRadius=&quot;4&quot; /&gt;&#x0a;    &lt;ui:SplitButton.Flyout&gt;&#x0a;        &lt;ContextMenu&gt;&#x0a;            &lt;ui:MenuItem&gt;&#x0a;                &lt;ui:MenuItem.Header&gt;&#x0a;                    &lt;Border Width=&quot;35&quot; Height=&quot;20&quot; Background=&quot;Red&quot; CornerRadius=&quot;4&quot; /&gt;&#x0a;                &lt;/ui:MenuItem.Header&gt;&#x0a;            &lt;/ui:MenuItem&gt;&#x0a;            &lt;ui:MenuItem&gt;&#x0a;                &lt;ui:MenuItem.Header&gt;&#x0a;                    &lt;Border Width=&quot;35&quot; Height=&quot;20&quot; Background=&quot;Blue&quot; CornerRadius=&quot;4&quot; /&gt;&#x0a;                &lt;/ui:MenuItem.Header&gt;&#x0a;            &lt;/ui:MenuItem&gt;&#x0a;            &lt;ui:MenuItem&gt;&#x0a;                &lt;ui:MenuItem.Header&gt;&#x0a;                    &lt;Border Width=&quot;35&quot; Height=&quot;20&quot; Background=&quot;White&quot; CornerRadius=&quot;4&quot; /&gt;&#x0a;                &lt;/ui:MenuItem.Header&gt;&#x0a;            &lt;/ui:MenuItem&gt;&#x0a;        &lt;/ContextMenu&gt;&#x0a;    &lt;/ui:SplitButton.Flyout&gt;&#x0a;&lt;/ui:SplitButton&gt;">
            <ui:SplitButton Icon="{ui:SymbolIcon PaintBrush24}">
                <Border Width="35" Height="20" Background="Green" CornerRadius="4" />
                <ui:SplitButton.Flyout>
                    <ContextMenu>
                        <ui:MenuItem>
                            <ui:MenuItem.Header>
                                <Border Width="35" Height="20" Background="Red" CornerRadius="4" />
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                        <ui:MenuItem>
                            <ui:MenuItem.Header>
                                <Border Width="35" Height="20" Background="Blue" CornerRadius="4" />
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                        <ui:MenuItem>
                            <ui:MenuItem.Header>
                                <Border Width="35" Height="20" Background="White" CornerRadius="4" />
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                    </ContextMenu>
                </ui:SplitButton.Flyout>
            </ui:SplitButton>
        </controls:ControlExample>

        <controls:ControlExample
            Margin="0,24,0,0"
            HeaderText="A SplitButton with modified paddings"
            XamlCode="&lt;ui:SplitButton Padding=&quot;0&quot; CornerRadius=&quot;4&quot;&gt;&#x0a;    &lt;Border Width=&quot;35&quot; Height=&quot;25&quot; Background=&quot;Green&quot; CornerRadius=&quot;4,0,0,4&quot; /&gt;&#x0a;    &lt;ui:SplitButton.Flyout&gt;&#x0a;        &lt;ContextMenu&gt;&#x0a;            &lt;ui:MenuItem&gt;&#x0a;                &lt;ui:MenuItem.Header&gt;&#x0a;                    &lt;Border Width=&quot;35&quot; Height=&quot;20&quot; Background=&quot;Red&quot; CornerRadius=&quot;4&quot; /&gt;&#x0a;                &lt;/ui:MenuItem.Header&gt;&#x0a;            &lt;/ui:MenuItem&gt;&#x0a;            &lt;ui:MenuItem&gt;&#x0a;                &lt;ui:MenuItem.Header&gt;&#x0a;                    &lt;Border Width=&quot;35&quot; Height=&quot;20&quot; Background=&quot;Blue&quot; CornerRadius=&quot;4&quot; /&gt;&#x0a;                &lt;/ui:MenuItem.Header&gt;&#x0a;            &lt;/ui:MenuItem&gt;&#x0a;            &lt;ui:MenuItem&gt;&#x0a;                &lt;ui:MenuItem.Header&gt;&#x0a;                    &lt;Border Width=&quot;35&quot; Height=&quot;20&quot; Background=&quot;White&quot; CornerRadius=&quot;4&quot; /&gt;&#x0a;                &lt;/ui:MenuItem.Header&gt;&#x0a;            &lt;/ui:MenuItem&gt;&#x0a;        &lt;/ContextMenu&gt;&#x0a;    &lt;/ui:SplitButton.Flyout&gt;&#x0a;&lt;/ui:SplitButton&gt;">
            <ui:SplitButton Padding="0" CornerRadius="4">
                <Border Width="35" Height="25" Background="Green" CornerRadius="4,0,0,4" />
                <ui:SplitButton.Flyout>
                    <ContextMenu>
                        <ui:MenuItem>
                            <ui:MenuItem.Header>
                                <Border Width="35" Height="20" Background="Red" CornerRadius="4" />
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                        <ui:MenuItem>
                            <ui:MenuItem.Header>
                                <Border Width="35" Height="20" Background="Blue" CornerRadius="4" />
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                        <ui:MenuItem>
                            <ui:MenuItem.Header>
                                <Border Width="35" Height="20" Background="White" CornerRadius="4" />
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                    </ContextMenu>
                </ui:SplitButton.Flyout>
            </ui:SplitButton>
        </controls:ControlExample>

    </StackPanel>
</Page>