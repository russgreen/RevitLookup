<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.BasicInput.ToggleButtonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:basicInput="clr-namespace:RevitLookup.UI.Playground.Views.Pages.BasicInput"
    xmlns:converters="clr-namespace:RevitLookup.UI.Framework.Converters;assembly=RevitLookup.UI.Framework"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    d:DataContext="{d:DesignInstance basicInput:ToggleButtonPage}"
    d:DesignHeight="1200"
    d:DesignWidth="500"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,0,0,24">

        <controls:ControlExample
            Margin="0,0,0,0"
            HeaderText="Standard ToggleButton"
            XamlCode="&lt;ToggleButton Content=&quot;Toggle&quot; /&gt;">
            <DockPanel>
                <CheckBox
                    DockPanel.Dock="Right"
                    IsChecked="{Binding ViewModel.IsStandardToggleButtonEnabled, Converter={converters:InverseBooleanConverter}}"
                    Content="Disable control" />
                <ToggleButton
                    Content="Standard ToggleButton"
                    IsEnabled="{Binding ViewModel.IsStandardToggleButtonEnabled}" />
            </DockPanel>
        </controls:ControlExample>

    </StackPanel>
</Page>