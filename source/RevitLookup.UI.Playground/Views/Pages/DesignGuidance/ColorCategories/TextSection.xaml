<Page
    x:Class="RevitLookup.UI.Playground.Views.Pages.DesignGuidance.ColorCategories.TextSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Controls"
    mc:Ignorable="d"
    d:DesignHeight="1300"
    d:DesignWidth="800"
    Title="TextSection"
    Foreground="{DynamicResource WindowForeground}">

    <StackPanel>
        <!--  Colors section  -->
        <controls:ColorPageExample
            Title="Text"
            Description="For UI labels and static text">
            <ui:TextBlock
                FontSize="42"
                FontWeight="SemiBold"
                Text="Aa" />
        </controls:ColorPageExample>

        <Border
            Style="{StaticResource ColorTilesPanelStyle}"
            Margin="0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <controls:ColorTile
                    Background="{DynamicResource TextFillColorPrimaryBrush}"
                    ColorBrushName="TextFillColorPrimaryBrush"
                    TileRadius="8,0,0,8"
                    ColorExplanation="Rest"
                    ColorName="Text / Primary"
                    ColorValue="#000000 (E4, 89.56%)"
                    Foreground="{DynamicResource TextFillColorInverseBrush}"
                    ShowSeparator="False" />
                <controls:ColorTile
                    Grid.Column="1"
                    Background="{DynamicResource TextFillColorSecondaryBrush}"
                    ColorBrushName="TextFillColorSecondaryBrush"
                    ColorExplanation="Hover"
                    ColorName="Text / Secondary"
                    ColorValue="#000000 (9E, 61.86%)"
                    Foreground="{DynamicResource TextFillColorInverseBrush}"
                    ShowSeparator="False" />
                <controls:ColorTile
                    Grid.Column="2"
                    Background="{DynamicResource TextFillColorTertiaryBrush}"
                    ColorBrushName="TextFillColorTertiaryBrush"
                    ColorExplanation="Pressed only (not accessible)"
                    ColorName="Text / Tertiary"
                    ColorValue="#000000 (72, 44.58%)"
                    Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                    ShowSeparator="False" />
                <controls:ColorTile
                    Grid.Column="3"
                    Background="{DynamicResource TextFillColorDisabledBrush}"
                    ColorBrushName="TextFillColorDisabledBrush"
                    ColorExplanation="Disabled only (not accessible)"
                    ColorName="Text / Disabled"
                    TileRadius="0,8,8,0"
                    ColorValue="#000000 (5C, 36.14%)"
                    Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                    ShowSeparator="False" />
            </Grid>
        </Border>

        <!--  Text on accent  -->
        <controls:ColorPageExample
            Title="Text On Accent"
            Description="Used for text on accent colored controls or fills">
            <ui:TextBlock
                FontSize="42"
                FontWeight="SemiBold"
                Text="Aa">
                <ui:TextBlock.Foreground>
                    <SolidColorBrush
                        Color="{DynamicResource AccentControlFillColorDefault}" />
                </ui:TextBlock.Foreground>
            </ui:TextBlock>
        </controls:ColorPageExample>

        <Border
            Style="{StaticResource ColorTilesPanelStyle}"
            Margin="0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <controls:ColorTile
                    Background="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                    ColorBrushName="TextOnAccentFillColorPrimaryBrush"
                    ColorExplanation="Rest"
                    TileRadius="8,0,0,8"
                    ColorName="Accent Text / Primary"
                    ColorValue="Dark 2"
                    Foreground="{DynamicResource PalettePrimaryBrush}"
                    ShowSeparator="False" />
                <controls:ColorTile
                    Grid.Column="1"
                    Background="{DynamicResource TextOnAccentFillColorSecondaryBrush}"
                    ColorBrushName="TextOnAccentFillColorSecondaryBrush"
                    ColorExplanation="Hover"
                    ColorName="Accent Text / Secondary"
                    ColorValue="Dark 3"
                    Foreground="{DynamicResource PalettePrimaryBrush}"
                    ShowSeparator="False" />
                <controls:ColorTile
                    Grid.Column="2"
                    Background="{DynamicResource TextOnAccentFillColorTertiaryBrush}"
                    ColorBrushName="TextOnAccentFillColorTertiaryBrush"
                    ColorExplanation="Pressed only (not accessible)"
                    ColorName="Accent Text / Tertiary"
                    ColorValue="Dark 1"
                    Foreground="{DynamicResource PalettePrimaryBrush}"
                    ShowSeparator="False" />
                <controls:ColorTile
                    Grid.Column="3"
                    Background="{DynamicResource TextOnAccentFillColorDisabledBrush}"
                    ColorBrushName="TextOnAccentFillColorDisabledBrush"
                    ColorExplanation="Disabled only (not accessible)"
                    ColorName="Accent Text / Disabled"
                    ColorValue="#000000 (5C, 36.14%)"
                    TileRadius="0,8,8,0"
                    Foreground="{DynamicResource PalettePrimaryBrush}"
                    ShowSeparator="False" />
            </Grid>
        </Border>
    </StackPanel>

</Page>