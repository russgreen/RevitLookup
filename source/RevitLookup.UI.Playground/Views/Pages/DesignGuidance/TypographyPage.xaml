<Page
    x:Class="RevitLookup.UI.Playground.Client.Views.Pages.DesignGuidance.TypographyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:RevitLookup.UI.Playground.Client.Controls"
    xmlns:ui="http://lookupengine.com/xaml"
    mc:Ignorable="d"
    d:DesignHeight="850"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <StackPanel>

        <StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Type helps provide structure and hierarchy to UI. The default font for Windows is " />
                <ui:HyperlinkButton
                    Padding="0"
                    Content="Segoe UI Variable."
                    NavigateUri="https://learn.microsoft.com/windows/apps/design/downloads/#fonts" />
            </StackPanel>
            <TextBlock
                Margin="0,4,0,0"
                Text="Best practice is to use Regular weight for most text, use Semibold for titles."
                TextWrapping="WrapWithOverflow" />
            <TextBlock
                Margin="0,4,0,0"
                Text="The minimum values should be 12px Regular, 14px Semibold."
                TextWrapping="WrapWithOverflow" />
        </StackPanel>

        <controls:ControlExample
            Margin="0,24,0,24"
            XamlCode="&lt;ui:TextBlock Text=&quot;Caption&quot; FontTypography=&quot;Caption&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Body&quot; FontTypography=&quot;Body&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Body Strong&quot; FontTypography=&quot;BodyStrong&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Subtitle&quot; FontTypography=&quot;Subtitle&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Title&quot; FontTypography=&quot;Title&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Title Large&quot; FontTypography=&quot;TitleLarge&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Display&quot; FontTypography=&quot;Display&quot; /&gt;
                &#x0a;&#x0a;// Appearance sets the text color
                &#10;&lt;ui:TextBlock Text=&quot;Primary&quot; Appearance=&quot;Primary&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Secondary&quot; Appearance=&quot;Secondary&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Tertiary&quot; Appearance=&quot;Tertiary&quot; /&gt;
                &#10;&lt;ui:TextBlock Text=&quot;Disabled&quot; Appearance=&quot;Disabled&quot; /&gt;">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0">
                    <Grid
                        Margin="0,0,0,12"
                        HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="272" />
                            <ColumnDefinition
                                Width="136" />
                            <ColumnDefinition
                                Width="112" />
                            <ColumnDefinition
                                Width="164" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Margin="16,0,0,0"
                            Appearance="Secondary"
                            FontTypography="Caption"
                            Text="Example" />
                        <ui:TextBlock
                            Grid.Column="1"
                            Appearance="Secondary"
                            FontTypography="Caption"
                            Text="Variable Font" />
                        <ui:TextBlock
                            Grid.Column="2"
                            Appearance="Secondary"
                            FontTypography="Caption"
                            Text="Size/Line height" />
                        <ui:TextBlock
                            Grid.Column="3"
                            Appearance="Secondary"
                            FontTypography="Caption"
                            Text="Style" />
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Row="1">
                    <Grid
                        HorizontalAlignment="Stretch"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        MinHeight="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="272" />
                            <ColumnDefinition
                                Width="136" />
                            <ColumnDefinition
                                Width="112" />
                            <ColumnDefinition
                                Width="164" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="Caption" />
                        <ui:TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="Small, Regular" />
                        <ui:TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="12/16 epx" />
                        <ui:TextBlock
                            Grid.Column="3"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="Caption" />
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Row="2">
                    <Grid
                        HorizontalAlignment="Stretch"
                        MinHeight="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="272" />
                            <ColumnDefinition
                                Width="136" />
                            <ColumnDefinition
                                Width="112" />
                            <ColumnDefinition
                                Width="164" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            FontTypography="Body"
                            Text="Body" />
                        <ui:TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="Text, Regular" />
                        <ui:TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="14/20 epx" />
                        <ui:TextBlock
                            Grid.Column="3"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="Body" />
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Row="3">
                    <Grid
                        HorizontalAlignment="Stretch"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        MinHeight="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="272" />
                            <ColumnDefinition
                                Width="136" />
                            <ColumnDefinition
                                Width="112" />
                            <ColumnDefinition
                                Width="164" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            FontTypography="BodyStrong"
                            Text="Body Strong" />
                        <ui:TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="Text, SemiBold" />
                        <ui:TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="14/20 epx" />
                        <ui:TextBlock
                            Grid.Column="3"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="BodyStrong" />
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Row="4">
                    <Grid
                        HorizontalAlignment="Stretch"
                        MinHeight="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="272" />
                            <ColumnDefinition
                                Width="136" />
                            <ColumnDefinition
                                Width="112" />
                            <ColumnDefinition
                                Width="164" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            FontTypography="Subtitle"
                            Text="Subtitle" />
                        <ui:TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontTypography="Caption"
                            Text="Display, SemiBold" />
                        <ui:TextBlock
                            Grid.Column="2"
