<ui:ContentDialog
    x:Class="RevitLookup.UI.Framework.Views.Visualization.SolidVisualizationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:controls="clr-namespace:RevitLookup.UI.Framework.Controls"
    xmlns:local="clr-namespace:RevitLookup.UI.Framework.Views.Visualization"
    xmlns:visualization="clr-namespace:RevitLookup.Abstractions.ViewModels.Visualization;assembly=RevitLookup.Abstractions"
    mc:Ignorable="d"
    d:DesignHeight="540"
    d:DesignWidth="600"
    d:DataContext="{d:DesignInstance visualization:ISolidVisualizationViewModel}"
    Title="Visualization settings"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center">

    <ui:ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <!-- ReSharper disable once Xaml.StaticResourceNotResolved -->
            <Style
                BasedOn="{StaticResource DefaultContentDialogStyle}"
                TargetType="{x:Type local:SolidVisualizationDialog}" />
        </ResourceDictionary>
    </ui:ContentDialog.Resources>

    <StackPanel>
        <DockPanel>
            <ui:SymbolIcon
                DockPanel.Dock="Right"
                Margin="8 0 0 0"
                FontSize="20"
                Symbol="Eyedropper20" />
            <controls:ColorPickerControl
                DockPanel.Dock="Right"
                SelectedColor="{Binding FaceColor}" />
            <CheckBox
                TabIndex="0"
                IsChecked="{Binding ShowFace}"
                Content="Faces" />
        </DockPanel>
        <StackPanel
            Margin="0 8 0 0">
            <DockPanel>
                <TextBlock
                    Text="Transparency" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Transparency, 
                        StringFormat={}{0} %,
                        Mode=OneWay,
                        FallbackValue='12 %'}" />
            </DockPanel>
            <Slider
                Margin="0 4 0 0"
                Minimum="0"
                Maximum="100"
                TickFrequency="10"
                IsSnapToTickEnabled="True"
                TickPlacement="BottomRight"
                Value="{Binding Transparency}" />
        </StackPanel>
        <StackPanel
            Margin="0 8 0 0">
            <DockPanel>
                <TextBlock
                    Text="Scale" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Scale, 
                        StringFormat={}{0} %, 
                        Mode=OneWay,
                        FallbackValue='12 %'}" />
            </DockPanel>
            <Slider
                Margin="0 4 0 0"
                Minimum="100"
                Maximum="400"
                TickFrequency="25"
                IsSnapToTickEnabled="True"
                TickPlacement="BottomRight"
                Value="{Binding Scale}" />
        </StackPanel>
        <DockPanel
            Margin="0 8 0 0">
            <ui:SymbolIcon
                DockPanel.Dock="Right"
                Margin="8 0 0 0"
                FontSize="20"
                Symbol="Eyedropper20" />
            <controls:ColorPickerControl
                DockPanel.Dock="Right"
                SelectedColor="{Binding EdgeColor}" />
            <CheckBox
                TabIndex="1"
                IsChecked="{Binding ShowEdge}"
                Content="Edges" />
        </DockPanel>
    </StackPanel>

</ui:ContentDialog>