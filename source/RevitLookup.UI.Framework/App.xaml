<Application
    x:Class="RevitLookup.UI.Framework.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://lookupengine.com/xaml"
    xmlns:menu="clr-namespace:RevitLookup.UI.Framework.Markup.Menu">

    <!--XAML designer preview support-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            
                <!-- Themes -->
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                <menu:MenusDictionary />

                <!-- Controls -->
                <ResourceDictionary Source="pack://application:,,,/RevitLookup.UI.Framework;component/Controls/ContentPlaceholder/ContentPlaceholder.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>